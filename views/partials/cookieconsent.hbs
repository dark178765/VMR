<div class="cookie-consent">
    We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies
    <button type="button" class="btn btn-sm btn-light" style="color: #000;" onclick="closeCookieConsent()">Close</button> <a
        href="/privacy-policy">Privacy Policy</a>
</div>
<script>

    $(document).ready(function () {
        let cookieconsentcookie = getCookie('cookieconsent');
        if (!cookieconsentcookie) {
            $('.cookie-consent').show(300, 'slide');
            $('.footer .copyright').css('padding-bottom', '40px');
        }
        else {
            $('.cookie-consent').css('display', 'none')
            $('.footer .copyright').css('padding-bottom', '0px');
        }
    })

    function closeCookieConsent() {
        $('.cookie-consent').hide('slide');
        setCookie('cookieconsent', true, 1)
        $('.footer .copyright').css('padding-bottom', '0px');
    }

    function setCookie(cname, cvalue, exdays) {
        const d = new Date();
        d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
        let expires = "expires=" + d.toUTCString();
        document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }

    function getCookie(cname) {
        let name = cname + "=";
        let decodedCookie = decodeURIComponent(document.cookie);
        let ca = decodedCookie.split(';');
        for (let i = 0; i < ca.length; i++) {
            let c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }
</script>
<style>
    .cookie-consent {
        position: fixed;
        bottom: 0px;
        z-index: 9;
        background-color: #010733;
        width: 100%;
        padding: 5px;
        color: #fff;
        text-align: center;
    }

    .cookie-consent a {
        color: #fff;
    }
</style>