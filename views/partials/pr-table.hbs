<table class="table table-bordered even-table" style="border-collapse: collapse;">
    <tbody>
        <tr class="market-tr">
            <th class="market-th">Parameter</th>
            <th class="market-th">Details</th>
        </tr>
        <tr>
            <td class="market-td" style="text-align: center;">Market Size Provided for Years</td>
            <td class="market-td">{{History_CurrentYear}} - {{Forecast_Year}}</td>
        </tr>
        <tr>
            <td class="market-td" style="text-align: center;">Base Year</td>
            <td class="market-td">{{Base_Year}}</td>
        </tr>

        <tr>
            <td class="market-td" style="text-align: center;">Historic Years</td>
            <td class="market-td">{{History_CurrentYear}} - {{History_ForecastYear}}</td>
