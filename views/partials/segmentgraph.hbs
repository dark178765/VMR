<script>
    const labels = ['2021', '2028'];
    const data = {
        labels: labels,
        datasets: [
            {
                label: 'Application 1',
                data: [12.5, 14.6],
                backgroundColor: 'red',
            },
            {
                label: 'Application 2',
                data: [13.4, 34.7],
                backgroundColor: 'blue',
            }
        ]
    };
    const config = {
        type: 'bar',
        data: data,
        options: {
            plugins: {
