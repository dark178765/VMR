<style>
    .inputGroup {
        background-color: #fff;
        display: block;
        /*margin: 10px 0;*/
        position: relative;
    }

    .inputGroup label {
        padding: 12px 30px;
        width: 100%;
        display: block;
        text-align: left;
        color: #3C454C;
        cursor: pointer;
        position: relative;
        z-index: 2;
        transition: color 200ms ease-in;
        overflow: hidden;
        border-bottom: 1px solid #dfdfdf;
        margin: 0px;
    }

    .inputGroup label:before {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        content: "";
        background-color: #5562eb;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%) scale3d(1, 1, 1);
        transition: all 900ms cubic-bezier(0.4, 0, 0.2, 1);
        opacity: 0;
        z-index: -1;
    }

    .inputGroup label:after {
        width: 32px;
        height: 32px;
        content: "";
        border: 2px solid #D1D7DC;
        background-color: #fff;
        background-image: url("data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.414 11L4 12.414l5.414 5.414L20.828 6.414 19.414 5l-10 10z' fill='%23fff' fill-rule='nonzero'/%3E%3C/svg%3E ");
        background-repeat: no-repeat;
        background-position: 2px 3px;
        border-radius: 50%;
        z-index: 2;
        position: absolute;
        right: 30px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        transition: all 200ms ease-in;
    }

    .inputGroup input:checked~label {
        color: #fff;
    }

    .inputGroup input:checked~label:before {
        transform: translate(-50%, -50%) scale3d(56, 56, 1);
        opacity: 1;
    }

    .inputGroup input:checked~label:after {
        background-color: #54E0C7;
        border-color: #54E0C7;
    }

    .inputGroup input {
        width: 32px;
        height: 32px;
        order: 1;
        z-index: 2;
        position: absolute;
        right: 30px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        visibility: hidden;
    }

    .big-span {
        font-size: 25px;
        display: block;
    }

    .license-header {
        padding: 20px;
        text-align: center;
        border-bottom: 1px solid black;
        background-color: #010733;
        color: #fff;
    }

    .action {
        text-align: center;
        padding-bottom: 20px;
        border-top: 1px solid black;
        padding-top: 20px;
    }

    .price-text {
        border-bottom: 1px solid black;
        font-weight: bold;
    }
</style>
<h5 style="padding: 15px; font-size: 20px; font-weight: bold;margin-bottom: 0px;background: #dfdfdf;">Select License</h5>
<div class="license-type">
    <div class="inputGroup">
        <input id="radio1" name="radio" type="radio" checked value="single" />
        <label for="radio1"><span class="price-text" style="margin-left: 20px;">Single
                User</span><span class="big-span">$ {{pricingOptions.singleUser}} USD</span></label>
    </div>
    <div class="inputGroup">
        <input id="radio2" name="radio" type="radio" value="multi" />
        <label for="radio2"><span class="price-text" style="margin-left: 18px;">Corporate
                User</span><span class="big-span">$ {{pricingOptions.cooperateUser}} USD</span></label>
    </div>
    <div class="inputGroup">
        <input id="radio3" name="radio" type="radio" value="corporate" />
        <label for="radio3"><span class="price-text" style="margin-left: 10px;">Data Sheet
                </span><span class="big-span">$ 2000 USD</span></label>
    </div>
    <div class="action">
        <button class="btn btn-lg btn-dark" onclick="redirectToPurchase()">Buy Now</button>
    </div>
</div>

<script>
    function redirectToPurchase() {
        let checkedRadio = $('.license-type input[type=radio]:checked');
        let purchaseUrl = '/buy-now/{{slug}}/';
        switch ($(checkedRadio).val()) {
            case 'single':
                purchaseUrl += '0';
                break;
            case 'multi':
                purchaseUrl += '1';
                break;
            case 'corporate':
                purchaseUrl += '2';
                break;
        }
        window.location.href = purchaseUrl;
    }
</script>